<div class="container">
  <form action="/contact" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" name="name" id="name">
    </div>
    <div class="form-group">
      <label for="email">Email address</label>
      <input required name="email" type="email" class="form-control" id="email" aria-describedby="emailHelp">
      <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
    </div>
    <div class="form-group">
      <label for="subject">Subject</label>
      <input name="subject" type="text" class="form-control" id="subject">
    </div>
    <div class="form-group">
      <label for="message">Message</label>
      <!-- <textarea type="text" class="form-control" id="message"> -->
      <textarea required class="form-control" name="message" id="message" cols="30" rows="10"></textarea>
    </div>
    <!-- ternary operator to display error message if captcha not clicked -->
    <p style="color:red;display:<%= typeof captchaboolean != 'undefined' ? 'block' : 'none'  %>">Please check this box</p>
    <div id="html_element"></div>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<script src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit" async defer>
</script>
